<body>

    <!-- Inicio de la primera página -->
    <div data-role="page" id="foo" data-theme="b">

        <div data-role="header" style="background-color:rgb(194, 158, 206); color: #000; ">
            <div style="background-color: #000; text-align: center;">
                <ul>
                    <h1 style="color: white;">NefSports®</h1>
                </ul>
            </div>
        </div>
        <div role="main" class="ui-content">
        <h2>Editar Los productos</h2>
        <div data-role="content">
            <form action="/<%= clothe.code %>" method="post">
                <h4>
                    <%= clothe.team %>
                </h4>
                <input type="text" name="urlImg" placeholder="URL de la imagen" value="<%= clothe.urlImg %>">
                <input type="text" name="code" placeholder="Código de barras" value="<%= clothe.code %>">
                <input type="text" name="team" placeholder="Equipo" value="<%= clothe.team %>">
                <input type="number" name="price" placeholder="Precio de compra" value="<%= clothe.price %>">
                <input type="text" name="size" placeholder="Talla" value="<%= clothe.size %>">
                <input type="text" name="color" placeholder="Color" value="<%= clothe.color %>">
                <input type="number" name="stock" placeholder="Existencia" value="<%= clothe.stock %>">
                <input type="text" name="season" placeholder="Temporada" value="<%= clothe.season %>">
                <label for="flip-2">Activo:</label>
                <select name="status" id="flip-2" data-role="slider">
                    <option value="0" <%= clothe.status === 0 ? "selected" : "" %>>No</option>
                    <option value="1" <%= clothe.status === 1 ? "selected" : "" %>>Sí</option>
                </select>
                <button type="submit" id="submit-6" class="ui-shadow ui-btn ui-corner-all ui-mini">Actualizar</button>
                <li>
                    <a href="/" class="ui-btn">Cancelar</a>
                </li>
            </form>
        </div>
                 
